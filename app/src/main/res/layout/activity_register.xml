<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_buyer"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="142dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/register_bs_button_clicked"
                    android:padding="5dp"
                    android:text="Buyer"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.465"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_seller"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="142dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:background="@drawable/register_bs_button_unclicked"
                    android:text="Seller"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/lg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Registration"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bt_buyer"/>

        <EditText
            android:id="@+id/et_bName_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Name"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_buyer"/>

        <EditText
            android:id="@+id/et_bAddress_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_bName_register" />

        <EditText
            android:id="@+id/et_bRegNo_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_registration"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Registration Number"
            android:inputType = "numberDecimal"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_bAddress_register" />

        <EditText
            android:id="@+id/et_bPhNo_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_phone_login"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Phone Number"
            android:inputType = "numberDecimal"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_bRegNo_register" />

        <EditText
            android:id="@+id/et_bEmail_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_bPhNo_register" />

        <EditText
            android:id="@+id/et_bPassword_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_bEmail_register" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_bRegister_register"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Register"
            android:background="@drawable/back_button"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_bPassword_register"/>


                <TextView
                    android:id="@+id/tv_already_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="515dp"
                    android:text="@string/already_a_user_login"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/bt_buyer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
            android:id="@+id/et_shopName_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Shop Name"
            android:inputType="text"
            android:padding="8dp"
            android:visibility="gone"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bt_buyer"/>

        <EditText
            android:id="@+id/et_sAddress_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Address"
            android:visibility="gone"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_shopName_register" />

        <EditText
            android:id="@+id/et_sPanNo_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_registration"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Pan Card Number"
            android:visibility="gone"
            android:inputType = "numberDecimal"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_sAddress_register" />

        <EditText
            android:id="@+id/et_sPhNo_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_phone_login"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Phone Number"
            android:visibility="gone"
            android:inputType = "numberDecimal"
            android:padding="8dp"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_sPanNo_register" />

        <EditText
            android:id="@+id/et_sEmail_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:visibility="gone"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_sPhNo_register" />

        <EditText
            android:id="@+id/et_sPassword_register"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="12dp"
            android:background="@drawable/back1"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:visibility="gone"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_sEmail_register" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sRegister_register"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Register"
            android:background="@drawable/back_button"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_sPassword_register" />
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>